<?xml version="1.0"?>
<info>
    <id>groupalert</id>
    <name>Group Alert</name>
    <description>Group Alert enables ownCloud's admin users to display a message on files's view just after login for defined groups.
    </description>
    <licence>AGPL</licence>
    <author>François Boubée</author>
    <version>0.9</version>
    <namespace>GroupAlert</namespace>
    <category>collaboration</category>
    <repository type="bitbucket">https://zb2oby@bitbucket.org/zb2oby/groupalert.git</repository>
    <summary>display a message for specific groups.</summary>
    <dependencies>
        <owncloud min-version="10.0.7" max-version="10.0.99" />
    </dependencies>
    <screenshot>groupalert/img/screenshot.png</screenshot>
    <default_enable/>
    <settings>
        <admin>OCA\GroupAlert\Controller\AdminController</admin>
    </settings>
</info>
