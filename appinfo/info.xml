<?xml version="1.0"?>
<info>
    <id>groupalert</id>
    <name>Group Alert</name>
    <description>Group Alert enables ownCloud's admin users to display a message on files's view for defined groups. It allows to choose in which folder's view the message will be displayed.
    </description>
    <licence>AGPL</licence>
    <author>François Boubée</author>
    <version>0.9.2</version>
    <namespace>GroupAlert</namespace>
    <category>collaboration</category>
    <repository type="bitbucket">https://bitbucket.org/zb2oby/groupalert.git</repository>
    <summary>display a message for specific groups in specific folder.</summary>
    <dependencies>
        <owncloud min-version="10.0.7" max-version="10.0.99" />
    </dependencies>
    <documentation>
        <user>https://bitbucket.org/zb2oby/groupalert/src/master/README.md</user>
        <admin>https://bitbucket.org/zb2oby/groupalert/src/master/README.md</admin>
        <developer>https://bitbucket.org/zb2oby/groupalert/src/master/README.md</developer>
    </documentation>
    <bugs>https://bitbucket.org/zb2oby/groupalert/issues</bugs>
    <website>https://bitbucket.org/zb2oby/groupalert/src/master</website>
    <screenshot>https://bitbucket.org/zb2oby/groupalert/raw/master/img/screenshot.png</screenshot>
    <default_enable/>
    <settings>
        <admin>OCA\GroupAlert\Controller\AdminController</admin>
    </settings>
</info>
